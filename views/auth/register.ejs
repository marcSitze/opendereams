<%- include('../layouts/header.ejs') %> 
<style>
  .navbar{
    background-color: gray !important;
  }
</style>
<% if(locals.errors != null){ %>
  <% errors.forEach(error => { %>
      <li class="alert alert-danger text-center"><%= error.msg %></li>
 <% }) %> 
<% } %> 
<form class="form-signin text-center" action="/register" method="POST" id="register">
  <img class="mb-4" src="/images/odLogo.png" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal text-dark">Register a new admin</h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required="" autofocus="">
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required="">
 
  <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
  <a href="/login">Login</a>
</form>

