<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form action="/individual/<%= video.id %>" method="POST">
                <input type="text" name="comment" style="width: 80%;">
                <button type="submit" class="btn btn-info btn-sm">post</button>
            </form>
            
            <div class="comments-body">
                
                <% comments.forEach(comment => { %>
                    <div class="comment">
                        <div class="row">
                            <div class="col-3"><%= comment.user.name.split(' ')[0] %>: </div>
                            <div class="col-9 comment-text"><%= comment.comment %></div>
                        </div>
                    </div>
                <% }) %>
                
            </div>
        </div>
    </div>
</div>